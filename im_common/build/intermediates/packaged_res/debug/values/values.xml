<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="color" name="toolbarMenuIconColor"/>
    <attr format="color" name="toolbarTitleColor"/>
    <attr format="dimension" name="toolbarTitleSize"/>
    <color name="alertImportant">#f98d2c</color>
    <color name="alertNormal">#4ce275</color>
    <color name="colorAccent">#1572fc</color>
    <color name="colorAccentAlpha">#801572fc</color>
    <color name="colorDark">@color/black</color>
    <color name="colorLight">@color/white</color>
    <color name="colorPrimary">#31373d</color>
    <color name="colorPrimaryDark">#31373d</color>
    <color name="maskChatHeader">@color/black_alpha_48</color>
    <color name="navIconTintLight">@color/white_alpha_240</color>
    <color name="textAccent">@color/colorAccent</color>
    <color name="textDark">#202020</color>
    <color name="textLight">@color/colorLight</color>
    <color name="textPrimary">#4e5864</color>
    <color name="textSecond">#8d9ca9</color>
    <color name="windowsBackground">#f7f7f7</color>
    <color name="windowsBackgroundLight">#f8f8f8</color>
    <dimen name="actionBarWithStatusBarSize">73dp</dimen>
    <dimen name="fontNameSize">15sp</dimen>
    <dimen name="portraitMaxSize">@dimen/len_64</dimen>
    <dimen name="portraitMinSize">@dimen/len_36</dimen>
    <dimen name="portraitSize">@dimen/len_40</dimen>
    <dimen name="statusBarSize">25dp</dimen>
    <item name="default_portrait" type="drawable"/>
    <item name="tag_recycler_holder" type="id"/>
    <item name="toolbar" type="id"/>
    <string name="app_name">Common</string>
    <style name="AppTheme.Base" parent="Theme.private"/>
    <style name="AppTheme.Dialog.Alert.Light" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.private" parent="Theme.AppCompat">
        <!-- 复写3个主要的色彩. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Genius style -->
        <item name="gTextViewStyle">@style/Genius.Widget.TextView</item>
        <item name="gButtonStyle">@style/Genius.Widget.Button</item>
        <item name="gFloatActionButtonStyle">@style/Genius.Widget.FloatActionButton</item>
        <item name="gSeekBarStyle">@style/Genius.Widget.SeekBar</item>
        <item name="gCheckBoxStyle">@style/Genius.Widget.CompoundButton.CheckBox</item>
        <item name="gEditTextStyle">@style/Genius.Widget.EditText</item>
        <item name="gLoadingStyle">@style/Genius.Widget.Loading</item>
        <item name="gImageViewStyle">@style/Genius.Widget.ImageView</item>

        <!--背景色-->
        <item name="android:windowBackground">@color/windowsBackground</item>

        <!--设置没有Title-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!--ToolBar高度-->
        <item name="actionBarSize">@dimen/len_48</item>
        <!-- 左上角返回Icon -->
        <item name="homeAsUpIndicator">@drawable/ic_back</item>

        <!--初始化自己定义的3个属性值-->
        <item name="toolbarTitleSize">@dimen/font_18</item>
        <item name="toolbarTitleColor">@color/white_alpha_224</item>
        <item name="toolbarMenuIconColor">@color/white_alpha_224</item>

    </style>
    <declare-styleable name="EmptyView">
        <attr format="integer" name="comEmptyText"/>
        <attr format="integer" name="comErrorText"/>
        <attr format="integer" name="comLoadingText"/>
        <attr format="integer" name="comEmptyDrawable"/>
        <attr format="integer" name="comErrorDrawable"/>
    </declare-styleable>
</resources>